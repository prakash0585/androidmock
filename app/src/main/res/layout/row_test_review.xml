<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_test_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="1."
            android:layout_marginTop="4dp"/>

      <!--  <TextView
        android:id="@+id/tv_test_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:lineSpacingExtra="3dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Which of the following has recently been conferred with the Sir Ross Masood Lifetime Achievement Award 2014?"/>
   -->
        <WebView
            android:id="@+id/wv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rg_test_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:id="@+id/ll_test_option1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rg_test_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <WebView
                android:id="@+id/wv_test_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray"
                android:layout_gravity="top"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_test_option2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rg_test_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <WebView
                android:id="@+id/wv_test_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray"
                android:layout_gravity="top"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_test_option3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rg_test_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <WebView
                android:id="@+id/wv_test_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray"
                android:layout_gravity="top"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_test_option4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rg_test_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <WebView
                android:id="@+id/wv_test_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray"
                android:layout_gravity="top"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/wv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="3dp"
            android:visibility="gone"
            android:textColor="@color/text_color"
            android:background="@color/light_gray_bg"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_view_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solution"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        android:background="@drawable/green_button_selector"/>

   <!-- <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer : 3.75 days\n1/6 + 1/10 = 8/30 = 4/15\n15/4 = 3.75 days"
        android:padding="10dp"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:background="@color/light_gray_bg"/>-->

</LinearLayout>
