<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1. "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary" />


        <WebView
            android:id="@+id/wv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"></WebView>

        <TextView
            android:id="@+id/tv_test_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="Which of the following has recently been conferred with the Sir Ross Masood Lifetime Achievement Award 2014?"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llCheckbox1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_check_test_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCheckbox2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_check_test_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCheckbox3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_check_test_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCheckbox4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/chk4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <!-- <RadioButton
           android:id="@+id/rg_test_option1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_check_test_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
