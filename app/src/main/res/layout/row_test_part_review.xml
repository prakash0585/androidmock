<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1. "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary" />


        <WebView
            android:id="@+id/wv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"></WebView>

        <TextView
            android:id="@+id/tv_test_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="Which of the following has recently been conferred with the Sir Ross Masood Lifetime Achievement Award 2014?"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rg_test_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_test_option1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/rg_test_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_test_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_test_option2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/rg_test_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_test_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_test_option3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/rg_test_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />
            <!-- <RadioButton
           android:id="@+id/rg_test_option3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_test_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_test_option4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/rg_test_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:clickable="false"
                android:enabled="false"
                android:gravity="top"
                android:text="@string/fa_circle_o"
                android:textSize="20sp" />

            <!-- <RadioButton
           android:id="@+id/rg_test_option1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Arundhati Roy"
           android:textAppearance="?android:textAppearanceSmall"
           android:textColor="@color/gray"/>-->
            <WebView
                android:id="@+id/wv_test_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_25"
        android:layout_marginRight="5dp"
        android:background="@drawable/edit_text_drawable"
        android:padding="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvInputChk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:clickable="false"
            android:enabled="false"
            android:gravity="top"
            android:visibility="gone"
            android:text="@string/fa_check"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/wv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/light_gray_bg"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_color"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_view_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/green_button_selector"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/solution"
        android:textColor="@color/white" />
</LinearLayout>
