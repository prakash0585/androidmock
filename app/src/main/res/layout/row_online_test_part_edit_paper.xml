<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_test_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1. "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorPrimary" />


        <WebView
            android:id="@+id/wv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"></WebView>

        <TextView
            android:id="@+id/tv_test_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="Which of the following has recently been conferred with the Sir Ross Masood Lifetime Achievement Award 2014?"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"
            android:visibility="gone" />
    </LinearLayout>
    <EditText
        android:id="@+id/etInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_edittext_bg"
        android:hint="@string/input_hint"
        android:inputType="number"
        android:textColor="@color/gray"
        android:textColorHint="@color/light_gray"
        android:visibility="gone"
        android:textSize="18sp" />
</LinearLayout>