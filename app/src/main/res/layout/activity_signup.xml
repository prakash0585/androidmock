<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/margin_25"
    android:paddingRight="@dimen/margin_25"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sabakuch.epaper.activity.LoginActivity">

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/signup"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/text_color" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">



                <EditText
                    android:visibility="gone"
                    android:id="@+id/et_last_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_edittext_bg"
                    android:ems="10"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color" />
            </LinearLayout>
            <EditText
                android:id="@+id/et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_edittext_bg"
                android:ems="10"
                android:hint="@string/first_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_edittext_bg"
                android:ems="10"
                android:hint="@string/phone_number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_edittext_bg"
                android:drawableLeft="@drawable/attherate"
                android:drawablePadding="3dp"
                android:ems="10"
                android:gravity="bottom"
                android:hint="@string/prompt_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_edittext_bg"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:hint="@string/prompt_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color" />

            <EditText
                android:visibility="gone"
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/gray_edittext_bg"
                android:drawableLeft="@drawable/locked"
                android:drawablePadding="3dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:hint="@string/confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="50"
                android:maxLines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_color"
                android:textColorHint="@color/hint_color" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/llDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/gray_edittext_bg"
                android:padding="5dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/dob"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/hint_color" />

                <TextView
                    android:id="@+id/tv_IMG_DOB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:text="@string/fa_calendar_check_o" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textColor="@color/text_color" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:checked="true"
                    android:text="@string/female"
                    android:textColor="@color/text_color" />
            </RadioGroup>
            <!-- <TextView
                 android:id="@+id/tv_captcha"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:text="9 + 3"
                 android:padding="5dp"
                 android:gravity="center"
                 android:layout_gravity="center"
                 android:layout_marginTop="10dp"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:background="@drawable/gray_border_bg"
                 android:textColor="@color/text_color"
                 />

             <EditText
                 android:id="@+id/et_answer"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:hint="@string/answer"
                 android:background="@drawable/gray_edittext_bg"
                 android:textColorHint="@color/hint_color"
                 android:inputType="textPersonName"
                 android:padding="5dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="2dp"
                 android:maxLength="50"
                 android:maxLines="1"
                 android:textColor="@color/text_color"
                 android:ems="10"
                 android:imeOptions="actionDone"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:singleLine="true" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_i_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTnC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/i_agree_to_terms"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/text_color" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/submit_button_bg"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>

