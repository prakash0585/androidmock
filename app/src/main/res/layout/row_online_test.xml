<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_test_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="1."/>

        <TextView
        android:id="@+id/tv_test_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:lineSpacingExtra="3dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Which of the following has recently been conferred with the Sir Ross Masood Lifetime Achievement Award 2014?"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_test_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rg_test_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arundhati Roy"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"/>
        <RadioButton
            android:id="@+id/rg_test_option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasneem Meenai"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"/>
        <RadioButton
            android:id="@+id/rg_test_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asma Jahangir"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"/>
        <RadioButton
            android:id="@+id/rg_test_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saiyid Hamid"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/gray"/>
    </RadioGroup>
</LinearLayout>
